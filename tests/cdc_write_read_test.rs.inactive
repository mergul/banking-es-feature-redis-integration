use banking_es::{
    application::services::CQRSAccountService,
    infrastructure::{
        cdc_debezium::{CDCOutboxRepository, DebeziumConfig},
        cdc_service_manager::{CDCServiceManager, EnhancedCDCMetrics},
        init,
    },
};
use rust_decimal::Decimal;
use std::sync::Arc;
use std::time::Duration;
use uuid::Uuid;

#[tokio::test]
async fn test_cdc_write_read() {
    println!("ğŸ”§ CDC Write/Read Test");
    println!("=====================");

    // Initialize services
    let service_context = match banking_es::infrastructure::init::init_all_services().await {
        Ok(ctx) => {
            println!("âœ… Services initialized");
            ctx
        }
        Err(e) => {
            println!("âŒ Service initialization failed: {:?}", e);
            return;
        }
    };

    // Create CQRS service WITHOUT write batching
    let kafka_config = banking_es::infrastructure::kafka_abstraction::KafkaConfig::default();
    let cqrs_service = Arc::new(CQRSAccountService::new(
        service_context.event_store.clone(),
        service_context.projection_store.clone(),
        service_context.cache_service.clone(),
        kafka_config.clone(),
        5,  // Low concurrency
        10, // Small batch size
        Duration::from_millis(50),
        false, // DISABLE write batching - this requires CDC pipeline
    ));

    println!("âœ… CQRS service created (write batching disabled)");

    // Create and start CDC service manager to process events
    println!("ğŸ”§ Setting up CDC service manager...");
    let cdc_outbox_repo = Arc::new(CDCOutboxRepository::new(
        service_context.event_store.get_partitioned_pools().clone(),
    ));

    let kafka_producer_for_cdc =
        banking_es::infrastructure::kafka_abstraction::KafkaProducer::new(kafka_config.clone())
            .expect("Failed to create Kafka producer");
    let kafka_consumer_for_cdc =
        banking_es::infrastructure::kafka_abstraction::KafkaConsumer::new(kafka_config.clone())
            .expect("Failed to create Kafka consumer");

    let cdc_config = DebeziumConfig::default();
    let metrics = Arc::new(EnhancedCDCMetrics::default());

    let mut cdc_service_manager = CDCServiceManager::new(
        cdc_config,
        cdc_outbox_repo,
        kafka_producer_for_cdc,
        kafka_consumer_for_cdc,
        service_context.cache_service.clone(),
        service_context.projection_store.clone(),
        Some(metrics.clone()),
        Some(cqrs_service.get_consistency_manager()),
    )
    .expect("Failed to create CDC service manager");

    // Start CDC service
    println!("ğŸ”§ Starting CDC service manager...");
    match tokio::time::timeout(Duration::from_secs(30), cdc_service_manager.start()).await {
        Ok(Ok(_)) => {
            println!("âœ… CDC Service Manager started");
        }
        Ok(Err(e)) => {
            println!("âŒ Failed to start CDC service: {:?}", e);
            return;
        }
        Err(_) => {
            println!("âŒ CDC service manager start timed out after 30 seconds");
            return;
        }
    }

    // Test 1: Create account
    println!("\nğŸ“ Test 1: Create Account");
    let account_id = match cqrs_service
        .create_account("CDCUser".to_string(), Decimal::new(1000, 0))
        .await
    {
        Ok(id) => {
            println!("âœ… Account created: {}", id);
            id
        }
        Err(e) => {
            println!("âŒ Failed to create account: {:?}", e);
            return;
        }
    };

    // Wait for CDC to process the event
    println!("â³ Waiting for CDC to process account creation...");
    for i in 1..=10 {
        tokio::time::sleep(Duration::from_secs(1)).await;
        println!("  Waiting... {}s", i);

        match cqrs_service.get_account(account_id).await {
            Ok(Some(account)) => {
                println!(
                    "âœ… Success! Found account after {}s: {}",
                    i, account.owner_name
                );
                break;
            }
            Ok(None) => {
                println!("  Still not found after {}s", i);
            }
            Err(e) => {
                println!("  Still error after {}s: {:?}", i, e);
            }
        }
    }

    // Test 2: Deposit money
    println!("\nğŸ’° Test 2: Deposit Money");
    match cqrs_service
        .deposit_money(account_id, Decimal::new(500, 0))
        .await
    {
        Ok(_) => {
            println!("âœ… Deposit successful");
        }
        Err(e) => {
            println!("âŒ Deposit failed: {:?}", e);
            return;
        }
    }

    // Wait for CDC to process the deposit
    println!("â³ Waiting for CDC to process deposit...");
    for i in 1..=5 {
        tokio::time::sleep(Duration::from_secs(1)).await;
        println!("  Waiting... {}s", i);

        match cqrs_service.get_account_balance(account_id).await {
            Ok(balance) => {
                println!("âœ… Success! Balance after {}s: {}", i, balance);
                if balance == Decimal::new(1500, 0) {
                    println!("âœ… Correct balance: 1500 (1000 + 500)");
                } else {
                    println!("âš ï¸ Unexpected balance: {} (expected 1500)", balance);
                }
                break;
            }
            Err(e) => {
                println!("  Still error after {}s: {:?}", i, e);
            }
        }
    }

    // Test 3: Read account
    println!("\nğŸ“– Test 3: Read Account");
    match cqrs_service.get_account(account_id).await {
        Ok(Some(account)) => {
            println!(
                "âœ… Success! Found account: {} (balance: {})",
                account.owner_name, account.balance
            );
        }
        Ok(None) => {
            println!("âŒ Account not found in projections");
        }
        Err(e) => {
            println!("âŒ Read error: {:?}", e);
        }
    }

    // Check CDC metrics
    println!("\nğŸ“Š CDC Metrics:");
    let cdc_metrics = cdc_service_manager.get_metrics();
    println!(
        "  Events Processed: {}",
        cdc_metrics
            .events_processed
            .load(std::sync::atomic::Ordering::Relaxed)
    );
    println!(
        "  Events Failed: {}",
        cdc_metrics
            .events_failed
            .load(std::sync::atomic::Ordering::Relaxed)
    );
    println!(
        "  Projection Updates: {}",
        cdc_metrics
            .projection_updates
            .load(std::sync::atomic::Ordering::Relaxed)
    );

    // Cleanup
    match tokio::time::timeout(Duration::from_secs(10), cdc_service_manager.stop()).await {
        Ok(Ok(_)) => {
            println!("âœ… CDC service stopped");
        }
        Ok(Err(e)) => {
            println!("âš ï¸ Warning: Failed to stop CDC service gracefully: {:?}", e);
        }
        Err(_) => {
            println!("âš ï¸ Warning: CDC service stop timed out after 10 seconds");
        }
    }

    println!("ğŸ¯ CDC write/read test completed!");
}
