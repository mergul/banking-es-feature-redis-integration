# Outbox Cleanup Service Configuration
# Advanced two-phase cleanup strategy for CDC outbox

# Retention Policy
OUTBOX_RETENTION_HOURS=24
OUTBOX_SAFETY_MARGIN_MINUTES=30

# Cleanup Schedule
OUTBOX_CLEANUP_INTERVAL_MINUTES=60
OUTBOX_MAX_CYCLE_DURATION_MINUTES=15

# Batch Processing
OUTBOX_BATCH_SIZE=1000
OUTBOX_MAX_BATCHES_PER_CYCLE=10
OUTBOX_BATCH_DELAY_MS=100

# Performance Settings
OUTBOX_ENABLE_VACUUM=true
OUTBOX_VACUUM_THRESHOLD_PERCENT=20
OUTBOX_VACUUM_MIN_DEAD_TUPLES=1000

# Monitoring
OUTBOX_ENABLE_METRICS=true
OUTBOX_HEALTH_CHECK_INTERVAL_SECS=300

# Advanced Features
OUTBOX_ENABLE_ADVANCED_CLEANUP=true
OUTBOX_FALLBACK_TO_LEGACY=false